	"block": {
		"prefix": "block",
		"body": "${SMARTY_LDELIM:{}block name=${1:name}${SMARTY_RDELIM:\\}}\n\t$0\n${SMARTY_LDELIM:{}/block${SMARTY_RDELIM:\\}}",
